extends ../layout

block content
  h2 Sign Up

  .container
    .row
      .col-md-6.col-md-offset-3
        .well
          form(action='/signup', method="post")
            .form-group
              label(for='username')
              input.form-control(type='username', name='username', placeholder="Username")
            .form-group
              label(for='image')
              input.form-control(type='text', name='image', placeholder='Profile Picture URL')
            .form-group
              label(for='password')
              input.form-control(type='password', name='password', placeholder="Create a Password")

            .form-group
              label(for='password-confirm')
              input.form-control(type='password', name='password-confirm', placeholder="Confirm Password")

            .form-group
               label(for='category') Choose a topic to follow: &nbsp
               select(name='category')
                 option(value='') None
                 option(value='politics') Politics
                 option(value='science') Science
                 option(value='art') Art
                 option(value='religion') Religion
                 option(value='food') Food
                 option(value='fashion') Fashion
                 option(value='cars') Cars
                 option(value='sports') Sports
                 option(value='entertainment') Entertainment
                 option(value='Miscellaneous') Miscellaneous

            .form-group
              button.btn.btn-primary.btn-success(type='submit') Sign Up!

